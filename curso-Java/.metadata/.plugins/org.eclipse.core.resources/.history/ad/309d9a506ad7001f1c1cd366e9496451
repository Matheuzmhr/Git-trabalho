package controle;

import java.util.Scanner;

public class DesafioWhile {

	public static void main(String[] args) {
		
		Scanner entrada = new Scanner(System.in);
		
		int quatidadeDeNotas = 0;
		double nota = 0;
		double total = 0;
		
		while (nota != -1) {
			System.out.println("Digite sua nota, caso queira sair p/ digite -1");
			nota = entrada.nextDouble();
			
			if (nota <= 10 && nota >=0) {
				total =+ nota;
				quatidadeDeNotas++;
				
			} else if (nota != -1){
				System.out.println("Nota invalida!!!");
				System.out.println();
				
			}
			
		}
		
		
		entrada.close();

	}

}
